<section class="fixed-message__container" data-section-id="{{ section.id }}" data-section-type="fixedmessage"> 
  <div class="section is-width-wide"> 
    <div class="flex_main_class is-align-center">
      <div class="fixed-message__text grid__item medium-up--eight-tenths medium-down--six-tenths has-padding-top has-padding-bottom"> 
        {{section.settings.fixed_text}}
      </div> 
      <div class="fixed-message__button grid__item medium-up--two-tenths medium-down--four-tenths is-flex is-justify-center is-align-center"> 
        <a class="btn button--secondary js-close-fixed-message">{{section.settings.button_label}}</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "GDPR Message bar",
	"class": "fixed-message-section is-fixed-bottom jsFixedMessage is-hidden",
    "settings": [      
      {
        "id": "fixed_text",
        "type": "richtext",
        "label": "Text",
		"default": "<p>We use cookies on our website to give you the best shopping experience. By using this site, you agree to its use of cookies.</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
		"default": "I agree!"
      }
	]
  }
{% endschema %}

