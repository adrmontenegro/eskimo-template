    </div>
      <div class="hidden">          
        <div class="shop-now fadeInUp animated badges_font_size"> {{ 'collections.general.shop_now' | t }} &gt;</div>     
      </div>
      
    <noscript>
      {% capture image_size %}{{ max_height }}x{{ max_height }}{% endcapture %}
