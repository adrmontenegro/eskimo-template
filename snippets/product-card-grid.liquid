      {% elsif settings.review_app == 'ali_review_app' %}
      <div> {{ product.metafields.alireviews.seo_rating_review_key }} </div>
      {% else %}
      <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
